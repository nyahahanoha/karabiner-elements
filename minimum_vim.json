{
    "title": "minimum Vim",
    "rules": [
        {
            "description": "Turned on/off",
            "manipulators": [ {
                "type": "basic",
                "from": {
                    "key_code": "caps_lock",
                    "modifiers": {
                        "optional": ["any"]
                    }
                },
                "to": [
                    {
                        "set_variable": {
                            "name": "mode",
                            "value": 1
                        }
                    },
                    {
                        "halt": true,
                        "set_notification_message": {
                            "id": "notice",
                            "text": "Turned on GUI controller"
                        }
                    }
                ],
                "conditions": [
                    {
                        "type": "variable_if",
                        "name": "mode",
                        "value": 0
                    }
                ]
                },
                {
                "type": "basic",
                "from": {
                    "key_code": "caps_lock",
                    "modifiers": {
                        "optional": ["any"]
                    }
                },
                "to": [
                    {
                        "set_variable": {
                            "name": "mode",
                            "value": 0
                        }
                    },
                    {
                        "set_notification_message": {
                            "id": "notice",
                            "text": ""
                        }
                    }
                ],
                "conditions": [
                    {
                        "type": "variable_if",
                        "name": "mode",
                        "value": 1
                    }
                ]
                }
            ]
        },
        {
            "description": "move over text",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "h"
                    },
                    "to": [
                        {
                            "key_code": "left_arrow"
                        }
                    ],
                    "conditions": [
                        {
                            "type": "variable_if",
                            "name": "mode",
                            "value": 1
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "j"
                    },
                    "to": [
                        {
                            "key_code": "down_arrow"
                        }
                    ],
                    "conditions": [
                        {
                            "type": "variable_if",
                            "name": "mode",
                            "value": 1
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "k"
                    },
                    "to": [
                        {
                            "key_code": "up_arrow"
                        }
                    ],
                    "conditions": [
                        {
                            "type": "variable_if",
                            "name": "mode",
                            "value": 1
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "l"
                    },
                    "to": [
                        {
                            "key_code": "right_arrow"
                        }
                    ],
                    "conditions": [
                        {
                            "type": "variable_if",
                            "name": "mode",
                            "value": 1
                        }
                    ]
                }
            ]
        },
        {
            "description": "enter",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                    "key_code": "o"
                    },
                    "to": [
                    {
                        "key_code": "e",
                        "modifiers": ["left_control"]
                    },
                    {
                        "key_code": "return_or_enter"
                    }
                    ],
                    "conditions": [
                        {
                            "type": "variable_if",
                            "name": "mode",
                            "value": 1
                        }
                    ]
                }
            ]
        },
        {
            "description": "back",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "x"
                    },
                    "to": [
                    {
                        "key_code": "d",
                        "modifiers": ["left_control"]
                    }
                    ],
                    "conditions": [
                        {
                            "type": "variable_if",
                            "name": "mode",
                            "value": 1
                        }
                    ]
                }
            ]
        }
    ]
}

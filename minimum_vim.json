{
    "title": "minimum_Vim",
    "rules": [
        {
            "description": "Turned on/off(minimum_vim)",
            "manipulators": [ {
                "type": "basic",
                "from": {
                    "key_code": "j"
                },
                "to": [
                    {
                        "key_code": "delete_or_backspace"
                    },
                    {
                        "set_variable": {
                            "name": "vim_mode",
                            "value": 1
                        }
                    },
                    {
                        "halt": true,
                        "set_notification_message": {
                            "id": "notice",
                            "text": "Turned on Minimum vim"
                        }
                    }
                ],
                "conditions": [
                    {
                    "type": "variable_if",
                    "name": "j_key",
                    "value": 1
                    }
                ]
            },
            {
                "type": "basic",
                "from": {
                    "key_code": "j"
                },
                "to": [
                    {
                        "set_variable": {
                            "name": "j_key",
                            "value": 1
                        }
                    },
                    {
                        "key_code": "j"
                    }
                ],
                "to_delayed_action": {
                    "to_if_invoked": [
                        {
                            "set_variable": {
                                "name": "j_key",
                                "value": 0 }
                        }
                    ],
                    "to_if_canceled": [
                        {
                            "set_variable": {
                                "name": "j_key",
                                "value": 0
                            }
                        }
                    ]
                },
                "conditions": [
                    {
                        "type": "frontmost_application_unless",
                        "bundle_identifiers": [
                        "com.googlecode.iterm2",
                        "com.microsoft.VSCode"
                        ]
                    },
                        {
                            "type": "variable_unless",
                            "name": "vim_mode",
                            "value": 1
                        }
                    ]
                },
                {
                "type": "basic",
                "from": {
                    "key_code": "i"
                },
                "to": [
                    {
                        "set_variable": {
                            "name": "vim_mode",
                            "value": 0
                        }
                    },
                    {
                        "set_notification_message": {
                            "id": "notice",
                            "text": ""
                        }
                    }
                ],
                "conditions": [
                    {
                        "type": "variable_if",
                        "name": "vim_mode",
                        "value": 1
                    }
                ]
                }
                ,
                {
                "type": "basic",
                "from": {
                    "key_code": "escape"
                },
                "to": [
                    {
                        "set_variable": {
                            "name": "vim_mode",
                            "value": 0
                        }
                    },
                    {
                        "set_notification_message": {
                            "id": "notice",
                            "text": ""
                        }
                    }
                ],
                "conditions": [
                    {
                        "type": "variable_if",
                        "name": "vim_mode",
                        "value": 1
                    }
                ]
                }
                ]
        },
        {
            "description": "move over text(minimum_vim)",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "h"
                    },
                    "to": [
                        {
                            "key_code": "left_arrow"
                        }
                    ],
                    "conditions": [
                        {
                            "type": "variable_if",
                            "name": "vim_mode",
                            "value": 1
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "j"
                    },
                    "to": [
                        {
                            "key_code": "down_arrow"
                        }
                    ],
                    "conditions": [
                        {
                            "type": "variable_if",
                            "name": "vim_mode",
                            "value": 1
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "k"
                    },
                    "to": [
                        {
                            "key_code": "up_arrow"
                        }
                    ],
                    "conditions": [
                        {
                            "type": "variable_if",
                            "name": "vim_mode",
                            "value": 1
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "l"
                    },
                    "to": [
                        {
                            "key_code": "right_arrow"
                        }
                    ],
                    "conditions": [
                        {
                            "type": "variable_if",
                            "name": "vim_mode",
                            "value": 1
                        }
                    ]
                }
            ]
        },
        {
            "description": "down_line(minimum_vim)",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                    "key_code": "o"
                    },
                    "to": [
                    {
                        "key_code": "e",
                        "modifiers": ["left_control"]
                    },
                    {
                        "key_code": "return_or_enter"
                    }
                    ],
                    "conditions": [
                        {
                            "type": "variable_if",
                            "name": "vim_mode",
                            "value": 1
                        }
                    ]
                }
            ]
        },
        {
            "description": "back(minimum_vim)",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "x"
                    },
                    "to": [
                    {
                        "key_code": "d",
                        "modifiers": ["left_control"]
                    }
                    ],
                    "conditions": [
                        {
                            "type": "variable_if",
                            "name": "vim_mode",
                            "value": 1
                        }
                    ]
                }
            ]
        },
        {
            "description": "right_most(minimum_vim)",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "simultaneous": [
                            { "key_code": "i"},
                            { "key_code": "left_shift"}
                        ]
                    },
                    "to": [
                        {
                            "key_code": "e",
                            "modifiers": ["left_control"]
                        }
                    ],
                    "conditions": [
                        {
                            "type": "variable_if",
                            "name": "vim_mode",
                            "value": 1
                        }
                    ]
                }
            ]
        },
        {
            "description": "left_most(minimum_vim)",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "simultaneous": [
                            {"key_code": "a"},
                            {"key_code": "left_shift"}
                        ]
                    },
                    "to": [
                        {
                            "key_code": "a",
                            "modifiers": ["left_control"]
                        }
                    ],
                    "conditions": [
                        {
                            "type": "variable_if",
                            "name": "vim_mode",
                            "value": 1
                        }
                    ]
                }
            ]
        },
        {
            "description": "nullification caps lock(minimum_vim)",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "caps_lock"
                    },
                    "conditions": [
                        {
                            "type": "variable_if",
                            "name": "vim_mode",
                            "value": 1
                        }
                    ]
                }
            ]
        }
    ]
}

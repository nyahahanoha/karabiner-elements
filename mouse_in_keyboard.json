{
    "title": "mouse_in_keyboard",
    "rules": [
        {
            "description": "Turned on/off(mouse_in_keyboard",
            "manipulators": [ {
                "type": "basic",
                "from": {
                    "key_code": "m"
                },
                "to": [
                    {
                        "set_variable": {
                            "name": "mouse_mode",
                            "value": 1
                        }
                    },
                    {
                        "halt": true,
                        "set_notification_message": {
                            "id": "notice",
                            "text": "Turned on mouse in keyboard"
                        }
                    }
                ],
                "conditions": [
                    {
                        "type": "variable_unless",
                        "name": "mouse_mode",
                        "value": 1
                    },
                    {
                        "type": "variable_if",
                        "name": "mode",
                        "value": 1
                    }
                ]
                },
                {
                "type": "basic",
                "from": {
                    "key_code": "caps_lock"
                },
                "to": [
                    {
                        "set_variable": {
                            "name": "mouse_mode",
                            "value": 0
                        }
                    },
                    {
                        "set_notification_message": {
                            "id": "notice",
                            "text": ""
                        }
                    }
                ],
                "conditions": [
                    {
                        "type": "variable_if",
                        "name": "mouse_mode",
                        "value": 1
                    }
                ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "caps_lock"
                    },
                    "to": {
                        "set_variable": {
                            "name": "mode",
                            "value": 1
                        }
                    },
                    "to_after_key_up": {
                        "set_variable": {
                            "name": "mode",
                            "value": 0
                        }
                    }
                }
            ]
        },
        {
            "description": "cursor controller(mouse_in_keyboard)",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "f"
                    },
                    "to": {
                        "mouse_key": { "x": 1000}
                    },
                    "conditions": [
                        {
                            "type": "variable_if",
                            "name": "mouse_mode",
                            "value": 1
                        },
                        {
                            "type": "variable_unless",
                            "name": "shift",
                            "value": 1
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "e"
                    },
                    "to": {
                        "mouse_key": { "y": -1000}
                    },
                    "conditions": [
                        {
                            "type": "variable_if",
                            "name": "mouse_mode",
                            "value": 1
                        },
                        {
                            "type": "variable_unless",
                            "name": "shift",
                            "value": 1
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "d"
                    },
                    "to": {
                        "mouse_key": { "y": 1000}
                    },
                    "conditions": [
                        {
                            "type": "variable_if",
                            "name": "mouse_mode",
                            "value": 1
                        },
                        {
                            "type": "variable_unless",
                            "name": "shift",
                            "value": 1
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "s"
                    },
                    "to": {
                        "mouse_key": { "x": -1000}
                    },
                    "conditions": [
                        {
                            "type": "variable_if",
                            "name": "mouse_mode",
                            "value": 1
                        },
                        {
                            "type": "variable_unless",
                            "name": "shift",
                            "value": 1
                        }
                    ]
                }
            ]
        },
        {
            "description": "cursor dash(mouse_in_keyboard)",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "spacebar",
                        "modifiers": {
                            "optional": ["any"]
                        }
                    },
                    "to": [
                        {
                            "set_variable": {
                                "name": "shift",
                                "value": 1
                            }
                        }
                    ],
                    "to_after_key_up": [
                        {
                            "set_variable": {
                                "name": "shift",
                                "value": 0
                            }
                        }
                    ],
                    "conditions": [
                        {
                            "type": "variable_if",
                            "name": "mouse_mode",
                            "value": 1
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "f"
                    },
                    "to": {
                        "mouse_key": { "x": 3000}
                    },
                    "conditions": [

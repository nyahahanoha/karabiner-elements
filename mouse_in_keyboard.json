                    },
                    "conditions": [
                        {
                            "type": "variable_if",
                            "name": "mouse_mode",
                            "value": 1
                        },
                        {
                            "type": "variable_if",
                            "name": "shift",
                            "value": 1
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "d"
                    },
                    "to": {
                        "mouse_key": { "y": 3000}
                    },
                    "conditions": [
                        {
                            "type": "variable_if",
                            "name": "mouse_mode",
                            "value": 1
                        },
                        {
                            "type": "variable_if",
                            "name": "shift",
                            "value": 1
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "s"
                    },
                    "to": {
                        "mouse_key": { "x": -3000}
                    },
                    "conditions": [
                        {
                            "type": "variable_if",
                            "name": "mouse_mode",
                            "value": 1
                        },
                        {
                            "type": "variable_if",
                            "name": "shift",
                            "value": 1
                        }
                    ]
                }
                ]
        },
        {
            "description": "mouse button(mouse_in_keyboard)",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "r"
                    },
                    "to": [
                        {
                            "pointing_button": "button1"
                        }
                    ],
                    "conditions": [
                        {
                            "type": "variable_if",
                            "name": "mouse_mode",
                            "value": 1
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
